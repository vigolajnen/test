include ./data.pug

div(class='accordion faq-accordion flex flex-col items-center justify-center')
  each el in listFaqAccordion.length ? listFaqAccordion : null
    div(class='w-full')
      input(type='checkbox' name='panel' id=`panel-${el.id}` class='hidden')
      label(for=`panel-${el.id}`
        class='relative block p-4 cursor-pointer')
        span(class="w-4/5 block")=el.title
      div(class='accordion__content overflow-hidden bg-grey-lighter')
        div(className='accordion__body' id=`panel${el.id}`)=el.text
