mixin carousel-services-item(data={})
  div(class='clubs-services-item rounded-4xl shadow-sm overflow-hidden')
    div(class='clubs-item relative z-2 flex flex-wrap items-center h-32 w-full justify-center bg-no-repeat bg-cover' style='background-image: url(' + data.bgItem +')')
      h3(class='relative p-4 md:mt-10 text-white-50 item-title mx-auto text-center w-full')=data.title 
    div(class='item-text w-100 h-36 bg-white-50 p-4 hidden sm:flex items-center mt-auto mb-0 justify-center')=data.description
