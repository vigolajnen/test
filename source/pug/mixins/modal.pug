mixin modal(title, id)
  .fixed.z-50.overflow-y-auto.top-0.w-full.left-0.hidden(id='modal-' + id)
    .flex.items-center.justify-center.pt-4.px-4.pb-20.text-center(class='sm:block sm:p-0 border-0 border-solid border-blueGray-200 rounded-t min-h-screen')
      .fixed.inset-0.transition-opacity
        .absolute.inset-0.bg-white-700.opacity-75(class='' onclick='toggleModal(' +id + ')')
        .bg-white-50.rounded-lg.overflow-y-auto.shadow-xl.transform.transition-all(class='modal-content p-4 xl:p-10 absolute w-full max-w-xl top-1/3 left-1/2 -translate-x-1/2 -translate-y-1/3' role='dialog' aria-modal='true' aria-labelledby='modal-headline')
          div(class='mt-6 mb-3 sm:my-4 font-bold text-2xl sm:text-4xl text-center')=title
          button.p-4.bg-transparent(type='button' class='absolute top-3 right-5 w-6 h-6' onclick='toggleModal(' +id + ')')
            +svg_icon(("images/sprite.svg"), "icon-close", "20", "20", "0 0 30 30")
          .bg-white-50(class='p-4')
            block
